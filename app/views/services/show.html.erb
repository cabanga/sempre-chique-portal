<!-- Hero -->
<div class="bg-image overflow-hidden" style="background-image: url(<%= picture_home_path %>);">
    <div class="bg-primary-dark-op">
        <div class="content content-narrow content-full">
            <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center mt-5 mb-2 text-center text-sm-left">
                <div class="flex-sm-fill">
                    <h1 class="font-w600 text-white mb-0 invisible" data-toggle="appear"><%= @service.name %></h1>
                    <h2 class="h4 font-w400 text-white-75 mb-0 invisible" data-toggle="appear" data-timeout="250"> <%= link_to 'Todos os Serviços', services_path, class: 'text-white' %> </h2>
                </div>
                <div class="flex-sm-00-auto mt-3 mt-sm-0 ml-sm-3">
                    <span class="d-inline-block invisible" data-toggle="appear" data-timeout="350">
                        <%= link_to edit_service_path(@service), class: "btn btn-sm btn-success" do  %>
                            <i class="fa fa-edit mr-1"></i> Atualizar
                        <% end %>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END Hero -->


<div class="content mb-3">
    <div class="block mb-3">
        <div class="block-content">
            <div class="row">
                <div class="col-md-5">
                    <p><span class="font-w600 mb-2">Nome do serviço: </span><span class="font-size-sm"><%= @service.name %></span></p>
                </div>
                <div class="col-md-7">
                    <p><span class="font-w600 mb-2">Descrição: </span></p>
                    <%= @service.description %>
                </div>
            </div>
            <br>
        </div>
    </div>
</div>
